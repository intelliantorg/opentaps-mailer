import org.ofbiz.party.party.PartyWorker;

partyId = request.getParameter("partyId");
if (partyId != null) {
    session.setAttribute("orderPartyId", partyId);  
} else {
    partyId = (String) session.getAttribute("orderPartyId");
}
if (partyId == null) session.setAttribute("orderPartyId", "_NA_");
if (partyId != null && partyId.equals("_NA_")) partyId = null;
context.put("partyId", partyId);  

if (partyId != null) {
    partyMap = PartyWorker.getPartyOtherValues(request, partyId, "party", "person", "partyGroup");
    if (partyMap != null) {
        iter = partyMap.entrySet().iterator();
        while (iter.hasNext()) {
            entry = iter.next();
            context.put(entry.getKey(), entry.getValue());
        }
    }
}
