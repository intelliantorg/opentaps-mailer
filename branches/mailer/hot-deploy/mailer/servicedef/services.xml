<?xml version="1.0" encoding="UTF-8" ?>

<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/services.xsd">
    <description>Services for mailer</description>

    <service name="mailer.createMarketingCampaign" engine="java" location="net.intelliant.MarketingCampaignService" invoke="createMarketingCampaign" auth="true">
        <implements service="createMarketingCampaign"/>
        <attribute name="fromEmailAddress" type="String" mode="IN" optional="false"/>
        <attribute name="templateId" type="String" mode="IN" optional="false"/>
        <attribute name="contactListId" type="String" mode="IN" optional="false"/>
    </service>
    
    <service name="mailer.addContactListToCampaign" engine="java" location="net.intelliant.MarketingCampaignService" invoke="addContactListToCampaign" auth="true">
        <attribute name="marketingCampaignId" type="String" mode="IN" optional="false"/>
        <attribute name="contactListId" type="String" mode="IN" optional="false"/>
    </service>
    
    <service name="mailer.removeContactListFromMarketingCampaign" engine="java" location="net.intelliant.MarketingCampaignService" invoke="removeContactListFromMarketingCampaign" auth="true">
        <attribute name="marketingCampaignId" type="String" mode="IN" optional="false"/>
        <attribute name="campaignListId" type="String" mode="IN" optional="false"/>
    </service>
</services>
