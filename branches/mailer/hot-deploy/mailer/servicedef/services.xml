<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/services.xsd">
    <description>Opentaps Live Catalog Services</description>
    <vendor>Open Source Strategies, Inc.</vendor>

    <service name="mailer.createMarketingCampaign" engine="java" export="true"
            location="net.intelliant.MarketingCampaignService" invoke="createMarketingCampaign">
        <description>
        	Provides a list of descriptions of promotions available. If a userId and password are specified,
            the promotions will be filtered accordingly.
        </description>
        <implements service="createMarketingCampaign"/>
        
        <!-- <attribute name="marketingCampaignId" type="String" mode="IN" optional="false"/> -->
        <attribute name="fromEmailAddress" type="String" mode="IN" optional="false"/>
        <attribute name="templateId" type="String" mode="IN" optional="false"/>
        <attribute name="contactListId" type="String" mode="IN" optional="false"/>
        <attribute name="marketingCampaignId" type="String" mode="OUT" optional="false"/>
    </service>    
</services>
